{
  "name": "git-summary",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "main": "electron/main.js",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"cross-env NODE_ENV=development vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "tsc -b && vite build",
    "build:electron": "npm run build && electron-builder",
    "build:all": "./build-all.sh",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "antd": "^6.1.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "express": "^4.22.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vditor": "^3.11.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.15.0",
    "vite": "^6.0.1",
    "cross-env": "^7.0.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.gitsummary.app",
    "productName": "GitSummary",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "target": "zip"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
